generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model company {
  id            String        @id @default(uuid())
  symbol        String
  assetType     String
  name          String
  description   String

}

